{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "commitComment",
            "description": "Enter commit comment",
            "type": "promptString"
        }
    ],
    "tasks": [
        //gitext-workspace
        {
            "label": "gitext-browse-workspace",
            "type": "process",
            "command": "C:\\Program Files\\GitExtensions\\GitExtensions.exe",
            "args": [
                "browse",
                "${workspaceFolder}"
            ],
            "presentation": {
                "reveal": "never",
            },
        },
        {
            "label": "gitext-commit-workspace",
            "type": "process",
            "command": "C:\\Program Files\\GitExtensions\\GitExtensions.exe",
            "args": [
                "commit",
                "${workspaceFolder}"
            ],
            "presentation": {
                "reveal": "never",
            },
        },
        //Ruff
        {
            "label": "ruff-fix-all-files-unsafe",
            "type": "process",
            "command": "${workspaceFolder}\\venv\\Scripts\\ruff.exe",
            "args": [
                "check",
                "--fix",
                "--unsafe-fixes"
            ],
            "presentation": {
                "reveal": "never",
            },
        },
        {
            "label": "ruff-fix-current-file-unsafe",
            "type": "process",
            "command": "${workspaceFolder}\\venv\\Scripts\\ruff.exe",
            "args": [
                "check",
                "--fix",
                "--unsafe-fixes",
                "${relativeFile}"
            ],
            "presentation": {
                "reveal": "never",
            },
        },
        //git workspace
        {
            "label": "git-stage-all",
            "type": "process",
            "command": "C:\\Program Files\\Git\\bin\\git.exe",
            "args": [
                "stage",
                "."
            ],
            "presentation": {
                "reveal": "never",
            },
        },
        {
            "label": "git-commit",
            "type": "process",
            "command": "C:\\Program Files\\Git\\bin\\git.exe",
            "args": [
                "commit",
                "--all",
                "--message",
                "${input:commitComment}"
            ],
            "presentation": {
                "reveal": "never",
            },
        },
        {
            "label": "git-push",
            "type": "process",
            "command": "C:\\Program Files\\Git\\bin\\git.exe",
            "args": [
                "push"
            ],
            "presentation": {
                "reveal": "never",
            },
        },
        //git-ext-user-settings
        {
            "label": "gitext-browse-user-config",
            "type": "process",
            "command": "C:\\Program Files\\GitExtensions\\GitExtensions.exe",
            "args": [
                "browse",
                "c:\\Users\\magnu\\AppData\\Roaming\\Code\\User\\"
            ],
            "presentation": {
                "reveal": "never",
            },
        },
        {
            "label": "gitext-commit-user-config",
            "type": "process",
            "command": "C:\\Program Files\\GitExtensions\\GitExtensions.exe",
            "args": [
                "commit",
                "c:\\Users\\magnu\\AppData\\Roaming\\Code\\User\\"
            ],
            "presentation": {
                "reveal": "never",
            },
        }
    ]
}